<main>

  <h2 class="text-center mt-5">ユーザ情報修正</h2>
  <%= form_with(model: @user, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
    <table width="50%" style="margin-left:350px">
      <tr height="40">
        <td align="center">
          氏名<span style="float: right"><%= f.label :last_name, "姓" %></span>
        </td>
        <td>
          <%= f.text_field :last_name, style: "margin-left:10px", maxlength: "10", required: true %><span
            style="margin-right:35px"></span><%= f.label :first_name, "名" %><%= f.text_field :first_name, style: "margin-left:10px", maxlength: "10", required: true %>
        </td>
      </tr>

      <tr height="40">
        <td align="center">
          住所<span style="float: right"><%= f.label :zipcode, "〒" %></span>
        </td>
        <td colspan="2">
          <%= f.text_field :zipcode, style: "margin-left:10px", size: "25", pattern: "^[0-9]+$", required: true %>
        </td>
      </tr>

      <tr height="40">
        <td align="right">
          <%= f.label :prefecture, "都道府県" %>
        </td>
        <td colspan="2">
          <%= f.text_field :prefecture, style: "margin-left:10px", size: "50", maxlength: "5", required: true %>
        </td>
      </tr>

      <tr height="40">
        <td align="right">
          <%= f.label :municipality, "市町村区" %>
        </td>
        <td colspan="2">
          <%= f.text_field :municipality, style: "margin-left:10px", size: "50", maxlength: "10", required: true %>
        </td>
      </tr>

      <tr height="40">
        <td align="right">
          <%= f.label :address, "番地" %>
        </td>
        <td colspan="2">
          <%= f.text_field :address, style: "margin-left:10px", size: "50", maxlength: "15", required: true %>
        </td>
      </tr>

      <tr height="40">
        <td align="right">
          <%= f.label :apartments, "マンション" %><br><%= "部屋番号" %></br>
        </td>
        <td colspan="2">
          <%= f.text_field :apartments, style: "margin-left:10px", size: "50", maxlength: "20", required: true %>
        </td>
      </tr>

      <tr height="40">
        <td align="center">
          <%= f.label :email, "メールアドレス" %>
        </td>
        <td colspan="2">
          <%= f.text_field :email, style: "margin-left:10px", size: "65" %>
        </td>
      </tr>

      <tr height="40">
        <td align="center">
          <%= f.label :phone_number, "電話番号" %>
        </td>
        <td colspan="2">
          <%= f.text_field :phone_number, style: "margin-left:10px", size: "65", pattern: "(^[0-9]+$){1,15}", required: true %>
        </td>
      </tr>

      <tr height="40">
        <td align="center">
          <%= f.label :password, "パスワード" %>
        </td>
        <td colspan="2">
          <%= f.password_field :password, style: "margin-left:10px", size: "65" %>
        </td>
      </tr>

      <tr height="40">
        <td align="center">
          <%= f.label :password_confirmation, "パスワード" %><br><%= "（再入力）" %></br>
        </td>
        <td colspan="2">
          <%= f.password_field :password_confirmation, style: "margin-left:10px", size: "65" %>
        </td>
      </tr>
    </table>

    <div class="row mt-5">
      <div class="col-5">
        <div class="d-flex justify-content-end">
          <%= f.submit "修正", class: "btn btn-primary" %>
        </div>
      </div>

      <div class="col-5 offset-2">
        <button class="btn btn-danger" type="submit">退会</button>
      </div>
    </div>
  <% end %>

</main>
