<main>
  <div class="mt-5 mx-auto" style="width: 200px">
    <h2>商品検索画面</h2>
  </div>

  <div class="container mt-5">
    <div class="mx-auto row">
      <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg">商品名</label>
      <div class="col-sm-6">
        <%= form_tag(products_path, method: :get) do %>
          <%= text_field_tag :search, "", {class: "form-control form-control-lg", id: "colFormLabelLg"} %>
          <%= submit_tag '検索', :product_name => nil, class: "btn btn-primary", style: "width: 80px" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="mx-auto row">
      <label class="col-sm-2 col-form-label col-form-label-lg" for="exampleFormControlSelect2">商品カテゴリ</label>
      <div class="col-sm-4">
        <select id="exampleFormControlSelect2" class="form-control">
          <option selected>未選択</option>
          <option>食材品</option>
          <option>生活用品</option>
          <option>消耗品</option>
          <option>嗜好品</option>
          <option>医薬品</option>
        </select>
      </div>
    </div>
  </div>
  <% if @products %>
    <div class="container">
      <p>全<%= @products.total_count %>件</p>
      <table class="table table-hover" border="1" style="border-collapse: collapse">
        <thead>
          <tr class=" table-header">
            <th class="text-left" width="55%">
              商品名
            </th>
            <th class="text-center" width="15%">
              商品カテゴリ
            </th>
            <th class="text-center" width="15%">
              価格
            </th>
            <th class="text-center" width="15%"></th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td scope="row">
                <%= product.product_name %>
              </td>
              <td class="text-center">
                <%= product.category.category_name %>
              </td>
              <td class="text-center">
                <%= product.price %>
              </td>
              <td class="text-center">
                <%= link_to "商品詳細", product_path(product),  class: "btn btn-primary btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="container">
      <nav aria-label="...">
        <ul class="pagination justify-content-center">
          <li><%= paginate @products %></li>
        </ul>
      </nav>
    </div>
  <% else %>
    <div class="container"> 
      <p>全0件</p>
      <table class="table table-hover" border="1" style="border-collapse: collapse">
        <thead>
          <tr>
            <th class="text-left" width="55%">商品名</th>
            <th class="text-center" width="15%">商品カテゴリ</th>
            <th class="text-center" width="15%">価格</th>
            <th class="text-center" width="15%"></th>
          </tr>
        </thead>
      </table>
      <h2 class="text-center">検索結果がありませんでした</h2>
  <% end %>
</main>
